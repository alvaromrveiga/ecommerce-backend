{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^test/(.*)$": "<rootDir>/test/$1",
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "globals": {
    "ts-jest": {
      "astTransformers": {
        "before": ["<rootDir>/test/nest-cli-plugins.ts"]
      }
    }
  }
}
